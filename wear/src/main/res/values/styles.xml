<resources>

    <!-- Base application theme. -->
    <style name="WearAppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="android:colorBackground">#000000</item>
        <item name="colorSurface">#202124</item>
        <item name="colorError">#ee675c</item>

        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="colorOnBackground">#ffffff</item>
        <item name="colorOnSurface">#ffffff</item>
        <item name="colorOnError">#202124</item>

        <item name="android:windowBackground">@android:color/black</item>

        <item name="colorBackgroundFloating">?colorSurface</item>
    </style>

    <style name="WearAppTheme.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenBackground">@android:color/black</item>
        <item name="postSplashScreenTheme">@style/WearAppTheme</item>
    </style>

    <style name="WearSettingsTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <item name="colorAccent">@color/colorPrimaryLight</item>
    </style>

    <style name="SettingPrefLayoutStyle">
        <item name="android:background">@drawable/button_noborder</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">@dimen/inner_layout_padding</item>
        <item name="android:paddingStart">@dimen/inner_layout_padding</item>
        <item name="android:clipChildren">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="WearDialogTheme" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowBackground">?colorSurface</item>
    </style>

    <style name="Widget.MaterialButton.OutlinedButton.IconOnly" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>
