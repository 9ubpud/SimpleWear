<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tile"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/inner_layout_padding"
        android:layout_marginTop="@dimen/inner_layout_padding"
        android:layout_marginEnd="@dimen/inner_layout_padding"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/batt_stat_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:padding="4dp"
            android:src="@drawable/ic_battery_std_white_24dp" />

        <TextView
            android:id="@+id/batt_stat_text"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="4dp"
            android:text="@string/state_syncing"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            tools:text="100%, Charging" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/inner_layout_padding"
        android:layout_marginEnd="@dimen/inner_layout_padding"
        android:layout_marginBottom="@dimen/inner_layout_padding"
        android:columnCount="3"
        android:rowCount="2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/wifi_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button_enabled"
                android:padding="8dp"
                android:src="@drawable/ic_network_wifi_white_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/bt_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button_enabled"
                android:padding="8dp"
                android:src="@drawable/ic_bluetooth_disabled_white_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/lock_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button_enabled"
                android:padding="8dp"
                android:src="@drawable/ic_lock_outline_white_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/dnd_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button_enabled"
                android:padding="8dp"
                android:src="@drawable/ic_do_not_disturb_off_white_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ringer_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button_enabled"
                android:padding="8dp"
                android:src="@drawable/ic_vibration_white_24dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/torch_toggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:adjustViewBounds="true"
                android:background="@drawable/round_button_enabled"
                android:padding="8dp"
                android:src="@drawable/ic_lightbulb_outline_white_24dp" />

        </FrameLayout>

    </GridLayout>

</LinearLayout>