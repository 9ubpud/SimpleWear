<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/inner_layout_padding"
    android:paddingTop="@dimen/inner_layout_padding"
    android:paddingEnd="@dimen/inner_layout_padding"
    android:paddingBottom="@dimen/inner_layout_padding"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/status_disconnected"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round_button_enabled"
        android:padding="8dp"
        android:src="@drawable/ic_phonelink_erase_white_24dp" />

</LinearLayout>